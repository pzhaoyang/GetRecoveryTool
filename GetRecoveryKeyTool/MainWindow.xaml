        <Button Content="Start UnProtect" Height="47" HorizontalAlignment="Left" Margin="236,412,0,0" Name="btnGetRecovery" VerticalAlignment="Top" Width="120" Click="btnGetRecovery_Click" />
        <TextBox Height="207" HorizontalAlignment="Left" Margin="184,171,0,0" x:Name="UnprotectionResult" VerticalAlignment="Top" Width="466" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
    </Grid>
</Window>
